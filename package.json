{
  "type": "module",
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@wdio/allure-reporter": "^9.15.0",
    "@wdio/cli": "^8.44.1",
    "@wdio/cucumber-framework": "^9.15.0",
    "@wdio/local-runner": "^8.44.1",
    "@wdio/spec-reporter": "^8.43.0",
    "allure-commandline": "^2.34.0",
    "chai": "^5.2.0",
    "chromedriver": "^139.0.0",
    "cross-env": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "wdio-chromedriver-service": "^8.1.1",
    "webdriverio": "^8.44.1"
  },
  "scripts": {
    "test": "wdio run wdio.conf.js",
    "test:baseurl": "cross-env BASE_URL=http://127.0.0.1:5500/index.html wdio run wdio.conf.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:clean": "rm -rf allure-results allure-report",
    "test-and-allure": "npm-run-all --continue-on-error --serial test:baseurl allure:generate allure:open"
  }
}
